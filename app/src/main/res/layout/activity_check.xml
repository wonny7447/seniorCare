<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".CheckActivity">

    <LinearLayout
        android:layout_width="399dp"
        android:layout_height="660dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <Space
            android:layout_width="match_parent"
            android:layout_height="36dp" />

        <TextView
            android:id="@+id/today"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:text="건강 상태 기록"
            android:textAlignment="center"
            android:textSize="10pt"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.897" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="36dp" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="482dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/menubuttons"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="201dp">


            <Space
                android:layout_width="match_parent"
                android:layout_height="36dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/first"
                    android:layout_width="272dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="불편한 곳은 없으신가요?"
                    android:textSize="7pt" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/first_yn"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/first_y"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="있다"
                        android:textSize="5pt" />

                    <RadioButton
                        android:id="@+id/first_n"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:checked="true"
                        android:text="없다"
                        android:textSize="5pt" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/second"
                    android:layout_width="272dp"
                    android:layout_height="match_parent"
                    android:text="식사는 하셨나요?"
                    android:textSize="7pt" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/second_yn"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/second_y"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="했다"
                        android:textSize="5pt" />

                    <RadioButton
                        android:id="@+id/second_n"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:checked="true"
                        android:text="안했다"
                        android:textSize="5pt" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/third"
                    android:layout_width="272dp"
                    android:layout_height="match_parent"
                    android:text="외출 일정이 있으신가요?"
                    android:textSize="7pt" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/third_yn"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/third_y"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="있다"
                        android:textSize="5pt" />

                    <RadioButton
                        android:id="@+id/third_n"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:checked="true"
                        android:text="없다"
                        android:textSize="5pt" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fourth"
                    android:layout_width="272dp"
                    android:layout_height="match_parent"
                    android:text="기분은 어떠신가요?"
                    android:textSize="7pt" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/fourth_yn"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/fourth_y"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="좋다"
                        android:textSize="5pt" />

                    <RadioButton
                        android:id="@+id/fourth_n"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:checked="true"
                        android:text="나쁘다"
                        android:textSize="5pt" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fifth"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="가족에게 따뜻한 한마디를 보내주세요!"
                    android:textSize="7pt" />
            </LinearLayout>

            <EditText
                android:id="@+id/fifth_text"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:ems="10"
                android:inputType="text" />

            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="등록하기" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menubuttons"
            android:layout_width="409dp"
            android:layout_height="49dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="1dp">

            <Button
                android:id="@+id/button_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FF0000"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_daylog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FF0000"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FF0000"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_mypage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FF0000"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>